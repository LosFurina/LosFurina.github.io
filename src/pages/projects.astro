<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title={`Projects | ${SITE_TITLE}`}
            description="My projects and portfolio showcasing DevOps and Infrastructure work"
        />
        <style>
            main {
                max-width: 1000px;
                margin: 0 auto;
                padding: 2rem;
            }

            .page-header {
                text-align: center;
                margin-bottom: 3rem;
            }

            .page-header h1 {
                font-size: 2.5rem;
                margin-bottom: 0.5rem;
                background: linear-gradient(
                    135deg,
                    var(--accent),
                    var(--accent-dark)
                );
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .page-header p {
                color: rgb(var(--gray));
                font-size: 1.1rem;
                margin: 0;
            }

            .section-title {
                font-size: 1.5rem;
                margin: 2.5rem 0 1.5rem;
                padding-bottom: 0.5rem;
                border-bottom: 2px solid rgba(var(--gray-light), 0.8);
            }

            .projects-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
                gap: 1.5rem;
            }

            .project-card {
                background: rgba(255, 255, 255, 0.8);
                backdrop-filter: blur(10px);
                border: 1px solid rgba(var(--gray-light), 0.8);
                border-radius: 16px;
                padding: 1.5rem;
                transition: all 0.3s ease;
                display: flex;
                flex-direction: column;
            }

            :global([data-theme="dark"]) .project-card {
                background: rgba(40, 40, 45, 0.8);
                border-color: rgba(255, 255, 255, 0.1);
            }

            .project-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
            }

            :global([data-theme="dark"]) .project-card:hover {
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
            }

            .project-card.featured {
                border-color: var(--accent);
                border-width: 2px;
            }

            .project-title {
                font-size: 1.2rem;
                font-weight: 700;
                margin: 0 0 0.75rem;
                color: rgb(var(--gray-dark));
            }

            .project-description {
                font-size: 0.9rem;
                color: rgb(var(--gray));
                line-height: 1.6;
                margin: 0 0 1rem;
                flex: 1;
            }

            .project-tags {
                display: flex;
                flex-wrap: wrap;
                gap: 0.5rem;
                margin-bottom: 1rem;
            }

            .tag {
                font-size: 0.75rem;
                padding: 0.25rem 0.6rem;
                background: rgba(var(--gray-light), 0.5);
                border-radius: 4px;
                color: rgb(var(--gray-dark));
            }

            :global([data-theme="dark"]) .tag {
                background: rgba(255, 255, 255, 0.1);
            }

            .project-links {
                display: flex;
                gap: 0.75rem;
                margin-top: auto;
            }

            .project-link {
                display: inline-flex;
                align-items: center;
                gap: 0.4rem;
                font-size: 0.85rem;
                color: var(--accent);
                text-decoration: none;
                padding: 0.4rem 0.8rem;
                border-radius: 6px;
                background: rgba(var(--gray-light), 0.3);
                transition: background 0.2s ease;
            }

            .project-link:hover {
                background: rgba(var(--gray-light), 0.5);
            }

            .project-link svg {
                width: 16px;
                height: 16px;
            }

            @media (max-width: 600px) {
                main {
                    padding: 1rem;
                }

                .projects-grid {
                    grid-template-columns: 1fr;
                }
            }
        </style>
    </head>
