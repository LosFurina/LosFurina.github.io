<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title={`Bookmarks | ${SITE_TITLE}`}
            description="Useful links and resources I've collected"
        />
        <style>
            main {
                max-width: 1000px;
                margin: 0 auto;
                padding: 2rem;
            }

            .page-header {
                text-align: center;
                margin-bottom: 3rem;
            }

            .page-header h1 {
                font-size: 2.5rem;
                margin-bottom: 0.5rem;
                background: linear-gradient(
                    135deg,
                    var(--accent),
                    var(--accent-dark)
                );
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .page-header p {
                color: rgb(var(--gray));
                font-size: 1.1rem;
            }

            .categories-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
                gap: 2rem;
            }

            .category {
                background: rgba(255, 255, 255, 0.65);
                border: 1px solid var(--border-soft);
                box-shadow: var(--shadow-soft);
                border-radius: 16px;
                padding: 1.5rem;
            }

            :global([data-theme="dark"]) .category {
                background: rgba(35, 30, 27, 0.7);
                border-color: var(--border-soft);
            }

            .category-title {
                font-size: 1.1rem;
                margin: 0 0 1rem;
                color: rgb(var(--gray-dark));
            }

            .links-list {
                list-style: none;
                margin: 0;
                padding: 0;
            }

            .link-item {
                margin-bottom: 0.75rem;
            }

            .link-item:last-child {
                margin-bottom: 0;
            }

            .link {
                display: block;
                padding: 0.6rem 0.75rem;
                margin: 0 -0.75rem;
                border-radius: 8px;
                text-decoration: none;
                transition: background 0.2s ease;
            }

            .link:hover {
                background: rgba(var(--gray-light), 0.5);
            }

            :global([data-theme="dark"]) .link:hover {
                background: rgba(255, 255, 255, 0.08);
            }

            .link-name {
                font-weight: 500;
                font-size: 0.95rem;
                color: var(--accent);
                display: flex;
                align-items: center;
                gap: 0.3rem;
            }

            .link-name svg {
                width: 14px;
                height: 14px;
                opacity: 0.7;
            }

            .link-description {
                font-size: 0.85rem;
                color: rgb(var(--gray));
                margin-top: 0.2rem;
            }

            @media (max-width: 600px) {
                main {
                    padding: 1rem;
                }

                .categories-grid {
                    grid-template-columns: 1fr;
                }
            }
        </style>
    </head>
    <body>
        <Header />
        <main>
            <div class="page-header">
                <h1>üîñ Bookmarks</h1>
                <p>Useful links and resources I've collected</p>
            </div>

            <div class="categories-grid">
                {
                    categories.map((category) => (
                        <section class="category">
                            <h2 class="category-title">{category.name}</h2>
                            <ul class="links-list">
                                {category.links.map((link) => (
                                    <li class="link-item">
                                        <a
                                            href={link.url}
                                            target="_blank"
                                            rel="noopener"
                                            class="link"
                                        >
                                            <span class="link-name">
                                                {link.name}
                                                <svg
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                >
                                                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                                    <polyline points="15 3 21 3 21 9" />
                                                    <line
                                                        x1="10"
                                                        y1="14"
                                                        x2="21"
                                                        y2="3"
                                                    />
                                                </svg>
                                            </span>
                                            <span class="link-description">
                                                {link.description}
                                            </span>
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </section>
                    ))
                }
            </div>
        </main>
        <Footer />
    </body>
</html>
