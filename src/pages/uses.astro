<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title={`Uses | ${SITE_TITLE}`}
            description="Tools, software, and hardware I use"
        />
        <style>
            main {
                max-width: 900px;
                margin: 0 auto;
                padding: 2rem;
            }

            .page-header {
                text-align: center;
                margin-bottom: 3rem;
            }

            .page-header h1 {
                font-size: 2.5rem;
                margin-bottom: 0.5rem;
                background: linear-gradient(
                    135deg,
                    var(--accent),
                    var(--accent-dark)
                );
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .page-header p {
                color: rgb(var(--gray));
                font-size: 1.1rem;
            }

            .category {
                margin-bottom: 2.5rem;
            }

            .category-header {
                display: flex;
                align-items: center;
                gap: 0.5rem;
                font-size: 1.3rem;
                margin-bottom: 1rem;
                padding-bottom: 0.5rem;
                border-bottom: 2px solid rgba(var(--gray-light), 0.8);
            }

            .category-icon {
                font-size: 1.5rem;
            }

            .items-grid {
                display: grid;
                gap: 1rem;
            }

            .item {
                display: flex;
                align-items: flex-start;
                gap: 1rem;
                padding: 1rem;
                background: rgba(255, 255, 255, 0.65);
                border: 1px solid var(--border-soft);
                box-shadow: var(--shadow-soft);
                border-radius: 12px;
                text-decoration: none;
                color: inherit;
                transition: transform 0.2s ease, border-color 0.2s ease;
            }

            :global([data-theme="dark"]) .item {
                background: rgba(35, 30, 27, 0.7);
                border-color: var(--border-soft);
            }

            a.item:hover {
                transform: translateY(-3px);
                border-color: rgba(var(--accent-rgb), 0.35);
            }

            .item-info {
                flex: 1;
            }

            .item-name {
                font-weight: 600;
                font-size: 1rem;
                color: rgb(var(--gray-dark));
                margin: 0 0 0.25rem;
            }

            .item-description {
                font-size: 0.9rem;
                color: rgb(var(--gray));
                margin: 0;
            }

            .item-arrow {
                color: rgb(var(--gray));
                transition: transform 0.2s ease;
            }

            a.item:hover .item-arrow {
                transform: translateX(4px);
                color: var(--accent);
            }

            @media (max-width: 600px) {
                main {
                    padding: 1rem;
                }
            }
        </style>
    </head>
    <body>
        <Header />
        <main>
            <div class="page-header">
                <h1>üõ†Ô∏è Uses</h1>
                <p>Tools, software, and hardware I use daily</p>
            </div>

            {
                categories.map((category) => (
                    <section class="category">
                        <h2 class="category-header">
                            <span class="category-icon">{category.icon}</span>
                            {category.name}
                        </h2>
                        <div class="items-grid">
                            {category.items.map((item) =>
                                item.link ? (
                                    <a
                                        href={item.link}
                                        target="_blank"
                                        rel="noopener"
                                        class="item"
                                    >
                                        <div class="item-info">
                                            <h3 class="item-name">
                                                {item.name}
                                            </h3>
                                            <p class="item-description">
                                                {item.description}
                                            </p>
                                        </div>
                                        <svg
                                            class="item-arrow"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            width="20"
                                            height="20"
                                        >
                                            <polyline points="9 18 15 12 9 6" />
                                        </svg>
                                    </a>
                                ) : (
                                    <div class="item">
                                        <div class="item-info">
                                            <h3 class="item-name">
                                                {item.name}
                                            </h3>
                                            <p class="item-description">
                                                {item.description}
                                            </p>
                                        </div>
                                    </div>
                                ),
                            )}
                        </div>
                    </section>
                ))
            }
        </main>
        <Footer />
    </body>
</html>
