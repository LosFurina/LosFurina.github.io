---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title={`GPG Keys | ${SITE_TITLE}`}
            description="My GPG public key for secure communication"
        />
        <style>
            main {
                width: 960px;
                max-width: calc(100% - 2em);
                margin: auto;
                padding: 3em 1em;
            }

            .page-header {
                text-align: center;
                margin-bottom: 3em;
            }

            .page-header h1 {
                font-size: 2.5rem;
                margin-bottom: 0.5rem;
                background: linear-gradient(
                    135deg,
                    var(--accent),
                    var(--accent-dark)
                );
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .page-header p {
                color: rgb(var(--gray));
                font-size: 1.1rem;
                margin: 0;
            }

            .key-card {
                background: rgba(var(--gray-light), 0.3);
                border: 1px solid rgba(var(--gray-light), 0.8);
                border-radius: 16px;
                padding: 2em;
                margin-bottom: 2em;
                backdrop-filter: blur(10px);
            }

            .key-header {
                display: flex;
                align-items: center;
                gap: 1rem;
                margin-bottom: 1.5em;
                flex-wrap: wrap;
            }

            .key-icon {
                width: 48px;
                height: 48px;
                background: linear-gradient(
                    135deg,
                    var(--accent),
                    var(--accent-dark)
                );
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                flex-shrink: 0;
            }

            .key-icon svg {
                width: 28px;
                height: 28px;
                color: white;
            }

            .key-info {
                flex: 1;
                min-width: 200px;
            }

            .key-info h2 {
                margin: 0 0 0.25rem 0;
                font-size: 1.5rem;
            }

            .key-meta {
                display: flex;
                gap: 1.5rem;
                flex-wrap: wrap;
                font-size: 0.9rem;
                color: rgb(var(--gray));
            }

            .key-meta span {
                display: flex;
                align-items: center;
                gap: 0.4rem;
            }

            .fingerprint {
                font-family:
                    "JetBrains Mono", "Fira Code", "Cascadia Code", monospace;
                font-size: 0.95rem;
                background: rgba(var(--gray-light), 0.5);
                padding: 1em;
                border-radius: 8px;
                word-break: break-all;
                letter-spacing: 0.05em;
                margin-bottom: 1.5em;
                border: 1px solid rgba(var(--gray-light), 0.8);
            }

            .key-content {
                position: relative;
            }

            .key-block {
                font-family:
                    "JetBrains Mono", "Fira Code", "Cascadia Code", monospace;
                font-size: 0.75rem;
                background: rgb(var(--gray-dark));
                color: rgb(var(--gray-light));
                padding: 1.5em;
                border-radius: 8px;
                overflow-x: auto;
                white-space: pre-wrap;
                word-break: break-all;
                line-height: 1.6;
                max-height: 400px;
                overflow-y: auto;
            }

            [data-theme="dark"] .key-block {
                background: rgba(0, 0, 0, 0.4);
                color: rgb(var(--gray-light));
            }

            .copy-btn {
                position: absolute;
                top: 0.75rem;
                right: 0.75rem;
                background: rgba(var(--accent-rgb), 0.2);
                border: 1px solid rgba(var(--accent-rgb), 0.35);
                color: rgb(var(--gray-light));
                padding: 0.5em 1em;
                border-radius: 999px;
                cursor: pointer;
                font-size: 0.85rem;
                display: flex;
                align-items: center;
                gap: 0.4rem;
                transition: background 0.2s ease, border-color 0.2s ease;
            }

            .copy-btn:hover {
                background: rgba(var(--accent-rgb), 0.3);
            }

            .copy-btn.copied {
                background: #22c55e;
                border-color: #22c55e;
            }

            .copy-btn svg {
                width: 16px;
                height: 16px;
            }

            .download-section {
                display: flex;
                gap: 1rem;
                flex-wrap: wrap;
                margin-top: 1.5em;
            }

            .download-btn {
                display: inline-flex;
                align-items: center;
                gap: 0.5rem;
                padding: 0.55em 1.2em;
                background: var(--accent);
                color: white;
                text-decoration: none;
                border-radius: 999px;
                font-weight: 600;
                transition: background 0.2s ease;
            }

            .download-btn:hover {
                background: var(--accent-dark);
            }

            .download-btn svg {
                width: 18px;
                height: 18px;
            }

            .info-note {
                margin-top: 3em;
                padding: 1.5em;
                background: rgba(var(--gray-light), 0.2);
                border-radius: 12px;
                border-left: 4px solid var(--accent);
            }

            .info-note h3 {
                margin: 0 0 0.5em 0;
                font-size: 1.1rem;
            }

            .info-note p {
                margin: 0;
                color: rgb(var(--gray));
                font-size: 0.95rem;
            }
        </style>
    </head>
    <body>
        <Header />
        <main>
            <div class="page-header">
                <h1>üîê GPG Public Key</h1>
                <p>
                    Use this key to send me encrypted messages or verify my
                    signatures
                </p>
            </div>

            <div class="key-card">
                <div class="key-header">
                    <div class="key-icon">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M15.75 5.25a3 3 0 0 1 3 3m3 0a6 6 0 0 1-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1 1 21.75 8.25Z"
                            ></path>
