---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE } from "../consts";

// ÁÆÄÂéÜÊï∞ÊçÆ - ËØ∑Ê†πÊçÆÂÆûÈôÖÊÉÖÂÜµ‰øÆÊîπ
const education = [
    {
        school: "Your University",
        degree: "Bachelor of Science in Computer Science",
        period: "2021 - 2025 (Expected)",
        details: [
            "GPA: 3.8/4.0",
            "Relevant coursework: Operating Systems, Computer Networks, Distributed Systems, Cloud Computing",
        ],
    },
];

const experience = [
    {
        company: "Tech Company",
        role: "DevOps Intern",
        period: "Summer 2024",
        details: [
            "Designed and implemented CI/CD pipelines using GitHub Actions, reducing deployment time by 60%",
            "Managed Kubernetes clusters with 50+ microservices in production",
            "Automated infrastructure provisioning using Terraform and Ansible",
            "Implemented monitoring and alerting using Prometheus and Grafana",
        ],
    },
    {
        company: "University IT Department",
        role: "System Administrator",
        period: "2023 - Present",
        details: [
            "Maintained Linux servers and network infrastructure for 500+ users",
            "Implemented backup and disaster recovery procedures",
            "Automated routine tasks using Bash and Python scripts",
        ],
    },
];

const skills = {
    "DevOps & Cloud": [
        "Kubernetes",
        "Docker",
        "GitHub Actions",
        "GitLab CI",
        "Jenkins",
        "ArgoCD",
    ],
    Infrastructure: ["Terraform", "Ansible", "Pulumi", "CloudFormation"],
    "Cloud Platforms": ["AWS", "GCP", "Azure", "DigitalOcean"],
    Monitoring: ["Prometheus", "Grafana", "ELK Stack", "Datadog"],
    Programming: ["Python", "Bash", "Go", "TypeScript"],
    "Operating Systems": ["Linux (Ubuntu, CentOS, Arch)", "Windows Server"],
};

const certifications = [
    "AWS Certified Cloud Practitioner",
    "CKA: Certified Kubernetes Administrator (In Progress)",
];
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title={`Resume | ${SITE_TITLE}`}
            description="My resume - DevOps & Infrastructure Engineer"
        />
        <style>
            main {
                max-width: 900px;
                margin: 0 auto;
                padding: 2rem;
            }

            .page-header {
                text-align: center;
                margin-bottom: 2rem;
            }

            .page-header h1 {
                font-size: 2.5rem;
                margin-bottom: 0.5rem;
                background: linear-gradient(
                    135deg,
                    var(--accent),
                    var(--accent-dark)
                );
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .page-header p {
                color: rgb(var(--gray));
                font-size: 1.1rem;
            }

            .download-btn {
                display: inline-flex;
                align-items: center;
                gap: 0.5rem;
                margin-top: 1rem;
                padding: 0.55rem 1.2rem;
                background: var(--accent);
                color: white;
                text-decoration: none;
                border-radius: 999px;
                font-weight: 600;
                transition: background 0.2s ease;
            }

            .download-btn:hover {
                background: var(--accent-dark);
            }

            .download-btn svg {
                width: 18px;
                height: 18px;
            }

            .section {
                margin-bottom: 2.5rem;
            }

            .section-title {
                font-size: 1.4rem;
                margin-bottom: 1rem;
                padding-bottom: 0.5rem;
                border-bottom: 2px solid var(--accent);
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            .timeline-item {
                position: relative;
                padding-left: 1.5rem;
                margin-bottom: 1.5rem;
                border-left: 2px solid rgba(var(--gray-light), 0.8);
            }

            .timeline-item::before {
                content: "";
                position: absolute;
                left: -6px;
                top: 0.35rem;
                width: 10px;
                height: 10px;
                border-radius: 50%;
                background: var(--accent);
            }

            .item-header {
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
                flex-wrap: wrap;
                gap: 0.5rem;
                margin-bottom: 0.5rem;
            }

            .item-title {
                font-size: 1.1rem;
                font-weight: 700;
                color: rgb(var(--gray-dark));
                margin: 0;
            }

            .item-subtitle {
                font-size: 0.95rem;
                color: rgb(var(--gray));
                margin: 0;
            }

            .item-period {
                font-size: 0.85rem;
                color: rgb(var(--gray));
                background: rgba(var(--gray-light), 0.5);
                padding: 0.2rem 0.6rem;
                border-radius: 4px;
            }

            .item-details {
                margin: 0.75rem 0 0;
                padding-left: 1.25rem;
            }

            .item-details li {
                font-size: 0.9rem;
                color: rgb(var(--gray));
                margin-bottom: 0.4rem;
                line-height: 1.5;
            }

            .skills-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 1.5rem;
            }

            .skill-category h4 {
                font-size: 1rem;
                margin: 0 0 0.75rem;
                color: rgb(var(--gray-dark));
            }

            .skill-tags {
                display: flex;
                flex-wrap: wrap;
                gap: 0.5rem;
            }

            .skill-tag {
                font-size: 0.8rem;
                padding: 0.3rem 0.7rem;
                background: rgba(var(--gray-light), 0.5);
                border-radius: 6px;
                color: rgb(var(--gray-dark));
            }

            :global([data-theme="dark"]) .skill-tag {
                background: rgba(255, 255, 255, 0.1);
            }

            .certifications {
                display: flex;
                flex-wrap: wrap;
                gap: 0.75rem;
            }

            .cert-badge {
                display: flex;
                align-items: center;
                gap: 0.4rem;
                padding: 0.5rem 1rem;
                background: rgba(var(--gray-light), 0.3);
                border: 1px solid rgba(var(--gray-light), 0.8);
                border-radius: 8px;
                font-size: 0.9rem;
            }

            .contact-info {
                display: flex;
                justify-content: center;
                flex-wrap: wrap;
                gap: 1.5rem;
                margin-top: 1rem;
                padding: 1rem;
                background: rgba(var(--gray-light), 0.2);
                border-radius: 12px;
            }

            .contact-item {
                display: flex;
                align-items: center;
                gap: 0.5rem;
                color: rgb(var(--gray));
                text-decoration: none;
                font-size: 0.9rem;
            }

            .contact-item:hover {
                color: var(--accent);
            }

            .contact-item svg {
                width: 18px;
                height: 18px;
            }

            @media print {
                header,
                footer,
                .download-btn {
                    display: none;
                }
                main {
                    padding: 0;
                    max-width: 100%;
                }
            }

            @media (max-width: 600px) {
                main {
                    padding: 1rem;
                }
                .item-header {
                    flex-direction: column;
                }
            }
        </style>
    </head>
    <body>
        <Header />
        <main>
            <div class="page-header">
                <h1>üìÑ Resume</h1>
                <p>DevOps & Infrastructure Engineer</p>

                <div class="contact-info">
                    <a href="mailto:me@liweijun.com" class="contact-item">
                        <svg
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                            ></path>
                            <polyline points="22,6 12,13 2,6"></polyline>
                        </svg>
                        me@liweijun.com
                    </a>
                    <a
                        href="https://github.com/LosFurina"
                        target="_blank"
                        class="contact-item"
                    >
                        <svg viewBox="0 0 16 16" fill="currentColor">
                            <path
                                d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
                            ></path>
                        </svg>
                        GitHub
                    </a>
                    <a
                        href="https://linkedin.com/in/yourprofile"
                        target="_blank"
                        class="contact-item"
                    >
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path
                                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                            ></path>
                        </svg>
                        LinkedIn
                    </a>
                </div>

                <a href="/resume.pdf" class="download-btn" download>
                    <svg
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"
                        ></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                    </svg>
                    Download PDF
                </a>
            </div>

            <section class="section">
                <h2 class="section-title">üéì Education</h2>
                {
                    education.map((edu) => (
                        <div class="timeline-item">
                            <div class="item-header">
                                <div>
                                    <h3 class="item-title">{edu.school}</h3>
                                    <p class="item-subtitle">{edu.degree}</p>
                                </div>
                                <span class="item-period">{edu.period}</span>
                            </div>
                            <ul class="item-details">
                                {edu.details.map((detail) => (
                                    <li>{detail}</li>
                                ))}
                            </ul>
                        </div>
                    ))
                }
            </section>

            <section class="section">
                <h2 class="section-title">üíº Experience</h2>
                {
                    experience.map((exp) => (
                        <div class="timeline-item">
                            <div class="item-header">
                                <div>
                                    <h3 class="item-title">{exp.company}</h3>
                                    <p class="item-subtitle">{exp.role}</p>
                                </div>
                                <span class="item-period">{exp.period}</span>
                            </div>
                            <ul class="item-details">
                                {exp.details.map((detail) => (
                                    <li>{detail}</li>
                                ))}
                            </ul>
                        </div>
                    ))
                }
            </section>

            <section class="section">
                <h2 class="section-title">üõ† Skills</h2>
                <div class="skills-grid">
                    {
                        Object.entries(skills).map(([category, items]) => (
                            <div class="skill-category">
                                <h4>{category}</h4>
                                <div class="skill-tags">
                                    {items.map((skill) => (
                                        <span class="skill-tag">{skill}</span>
                                    ))}
                                </div>
                            </div>
                        ))
                    }
                </div>
            </section>

            <section class="section">
                <h2 class="section-title">üèÜ Certifications</h2>
                <div class="certifications">
                    {
                        certifications.map((cert) => (
                            <div class="cert-badge">
                                <svg
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="var(--accent)"
                                    stroke-width="2"
                                    width="18"
                                    height="18"
                                >
                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                                    <polyline points="22 4 12 14.01 9 11.01" />
                                </svg>
                                {cert}
                            </div>
                        ))
                    }
                </div>
            </section>
        </main>
        <Footer />
    </body>
</html>
