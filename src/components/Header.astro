<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		margin: 0;
		padding: 0 2em;
		/* Apple-style glassmorphism */
		background: rgba(255, 255, 255, 0.72);
		backdrop-filter: saturate(180%) blur(20px);
		-webkit-backdrop-filter: saturate(180%) blur(20px);
		/* Subtle bottom border like Apple */
		border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	/* Dark mode glass effect */
	:global([data-theme="dark"]) header {
		background: rgba(29, 29, 31, 0.72);
		border-bottom: 0.5px solid rgba(255, 255, 255, 0.08);
	}

	/* Header shrink effect on scroll */
	header.scrolled {
		padding: 0 2em;
		background: rgba(255, 255, 255, 0.85);
	}

	:global([data-theme="dark"]) header.scrolled {
		background: rgba(29, 29, 31, 0.85);
	}

	h2 {
		margin: 0;
		font-size: 1.1em;
		font-weight: 600;
		letter-spacing: -0.02em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: rgb(var(--gray-dark));
		transition: opacity 0.2s ease;
	}

	h2 a:hover {
		opacity: 0.7;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		height: 56px;
	}

	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.5em;
	}

	nav a {
		padding: 0.5em 0.9em;
		color: rgb(var(--gray-dark));
		text-decoration: none;
		font-size: 0.9em;
		font-weight: 500;
		border-radius: 6px;
		transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
	}

	nav a:hover {
		background: rgba(var(--gray), 0.1);
	}

	nav a.active {
		color: var(--accent);
		background: rgba(var(--gray), 0.08);
	}

	/* Pill indicator for active link */
	nav a.active::after {
		content: "";
		position: absolute;
		bottom: 4px;
		left: 50%;
		transform: translateX(-50%);
		width: 4px;
		height: 4px;
		background: var(--accent);
		border-radius: 50%;
	}

	/* Dropdown Styles */
	.dropdown {
		position: relative;
	}

	.dropdown-trigger {
		display: flex;
		align-items: center;
		gap: 0.3em;
		padding: 0.5em 0.9em;
		color: rgb(var(--gray-dark));
		background: transparent;
		border: none;
		font-size: 0.9em;
		font-weight: 500;
		font-family: inherit;
		border-radius: 6px;
		cursor: pointer;
		transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.dropdown-trigger:hover {
		background: rgba(var(--gray), 0.1);
	}

	.dropdown.open .dropdown-trigger {
		background: rgba(var(--gray), 0.1);
	}

	.dropdown-arrow {
		transition: transform 0.2s ease;
	}

	.dropdown.open .dropdown-arrow {
		transform: rotate(180deg);
	}

	.dropdown-menu {
		position: absolute;
		top: calc(100% + 8px);
		left: 50%;
		transform: translateX(-50%) scale(0.95);
		min-width: 180px;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: saturate(180%) blur(20px);
		-webkit-backdrop-filter: saturate(180%) blur(20px);
		border: 0.5px solid rgba(0, 0, 0, 0.1);
		border-radius: 12px;
		box-shadow:
			0 4px 24px rgba(0, 0, 0, 0.12),
			0 0 0 0.5px rgba(0, 0, 0, 0.05);
		padding: 6px;
		opacity: 0;
		visibility: hidden;
		transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
		z-index: 100;
	}

	:global([data-theme="dark"]) .dropdown-menu {
		background: rgba(40, 40, 45, 0.95);
		border: 0.5px solid rgba(255, 255, 255, 0.1);
		box-shadow: 0 4px 24px rgba(0, 0, 0, 0.4);
	}

	.dropdown.open .dropdown-menu {
		opacity: 1;
		visibility: visible;
		transform: translateX(-50%) scale(1);
	}

	.dropdown-item {
		display: flex;
		align-items: center;
		gap: 0.6em;
		padding: 0.6em 0.8em;
		color: rgb(var(--gray-dark));
		text-decoration: none;
		font-size: 0.85em;
		font-weight: 500;
		border-radius: 8px;
		transition: background 0.15s ease;
	}

	.dropdown-item:hover {
		background: rgba(var(--gray), 0.1);
	}

	.item-icon {
		font-size: 1em;
	}

	.external-icon {
		margin-left: auto;
		font-size: 0.75em;
		color: rgb(var(--gray));
	}

	.dropdown-divider {
		height: 1px;
		background: rgba(var(--gray), 0.15);
		margin: 4px 8px;
	}

	.social-links {
		display: flex;
		align-items: center;
		gap: 0.5em;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 32px;
		height: 32px;
		border-radius: 8px;
		color: rgb(var(--gray));
		transition: all 0.2s ease;
	}

	.social-links a:hover {
		background: rgba(var(--gray), 0.12);
		color: rgb(var(--gray-dark));
	}

	.social-links svg {
		width: 18px;
		height: 18px;
	}

	/* Right side container */
	.nav-right {
		display: flex;
		align-items: center;
		gap: 0.75em;
	}

	/* Hamburger Menu Button - Hidden on Desktop */
	.hamburger {
		display: none;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 4px;
		width: 36px;
		height: 36px;
		padding: 0;
		background: transparent;
		border: none;
		cursor: pointer;
		z-index: 1001;
		border-radius: 8px;
		transition: background 0.2s ease;
	}

	.hamburger:hover {
		background: rgba(var(--gray), 0.1);
	}

	.hamburger-line {
		width: 20px;
		height: 2px;
		background: rgb(var(--gray-dark));
		border-radius: 2px;
		transition: all 0.3s ease;
	}

	/* Hamburger animation when menu is open */
	.hamburger.open .hamburger-line:nth-child(1) {
		transform: rotate(45deg) translate(4px, 4px);
	}

	.hamburger.open .hamburger-line:nth-child(2) {
		opacity: 0;
	}

	.hamburger.open .hamburger-line:nth-child(3) {
		transform: rotate(-45deg) translate(4px, -4px);
	}

	@media (max-width: 720px) {
		header {
			padding: 0 1em;
		}

		.hamburger {
			display: flex;
		}

		.social-links {
			display: none;
		}

		/* Mobile Menu - Slide Down */
		.internal-links {
			position: fixed;
			top: 56px;
			left: 0;
			right: 0;
			flex-direction: column;
			align-items: stretch;
			gap: 0.5em;
			padding: 1em;
			background: rgba(255, 255, 255, 0.95);
			backdrop-filter: saturate(180%) blur(20px);
			-webkit-backdrop-filter: saturate(180%) blur(20px);
			border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
			box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
			transform: translateY(-100%);
			opacity: 0;
			visibility: hidden;
			transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		}

		:global([data-theme="dark"]) .internal-links {
			background: rgba(29, 29, 31, 0.95);
			border-bottom: 0.5px solid rgba(255, 255, 255, 0.08);
		}

		.internal-links.open {
			transform: translateY(0);
			opacity: 1;
			visibility: visible;
		}

		nav a {
			padding: 0.75em 1em;
			font-size: 0.95em;
			justify-content: flex-start;
		}

		h2 {
			font-size: 1em;
		}

		/* Dropdown adjustments for mobile */
		.dropdown {
			width: 100%;
		}

		.dropdown-trigger {
			width: 100%;
			justify-content: space-between;
			padding: 0.75em 1em;
		}

		.dropdown-menu {
			position: static;
			transform: none;
			width: 100%;
			margin-top: 0.5em;
			opacity: 0;
			max-height: 0;
			overflow: hidden;
			visibility: hidden;
			box-shadow: none;
			border: none;
			background: rgba(var(--gray), 0.05);
		}

		.dropdown.open .dropdown-menu {
			opacity: 1;
			max-height: 500px;
			visibility: visible;
		}
	}

	/* Add padding to body to account for fixed header */
	:global(body) {
		padding-top: 56px;
	}
</style>

<script>
	// Add scroll effect
	const header = document.querySelector("header");

	function handleScroll() {
		if (window.scrollY > 10) {
			header?.classList.add("scrolled");
		} else {
			header?.classList.remove("scrolled");
		}
	}

	window.addEventListener("scroll", handleScroll, { passive: true });
	handleScroll();

	// Hamburger menu toggle
	const hamburgerBtn = document.getElementById("hamburgerBtn");
	const mobileMenu = document.getElementById("mobileMenu");

	hamburgerBtn?.addEventListener("click", (e) => {
		e.stopPropagation();
		hamburgerBtn.classList.toggle("open");
		mobileMenu?.classList.toggle("open");
	});

	// Close mobile menu when clicking a link
	mobileMenu?.querySelectorAll("a").forEach((link) => {
		link.addEventListener("click", () => {
			hamburgerBtn?.classList.remove("open");
			mobileMenu?.classList.remove("open");
		});
	});

	// Tools dropdown
	const dropdown = document.getElementById("toolsDropdown");
	const toolsBtn = document.getElementById("toolsBtn");

	toolsBtn?.addEventListener("click", (e) => {
		e.stopPropagation();
		dropdown?.classList.toggle("open");
	});

	// Close dropdown when clicking outside
	document.addEventListener("click", (e) => {
		if (!dropdown?.contains(e.target as Node)) {
			dropdown?.classList.remove("open");
		}
		// Close mobile menu when clicking outside
		if (
			!mobileMenu?.contains(e.target as Node) &&
			!hamburgerBtn?.contains(e.target as Node)
		) {
			hamburgerBtn?.classList.remove("open");
			mobileMenu?.classList.remove("open");
		}
	});

	// Close dropdown and mobile menu on escape key
	document.addEventListener("keydown", (e) => {
		if (e.key === "Escape") {
			dropdown?.classList.remove("open");
			hamburgerBtn?.classList.remove("open");
			mobileMenu?.classList.remove("open");
		}
	});
</script>
