<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		margin: 0;
		padding: 0 2rem;
		--header-bg: linear-gradient(
			180deg,
			rgba(251, 248, 244, 0.92),
			rgba(245, 240, 234, 0.86)
		);
		--header-border: rgba(210, 191, 175, 0.55);
		--header-text: rgba(64, 54, 47, 0.9);
		--header-text-strong: rgba(48, 40, 34, 1);
		--header-accent: #b36a4a;
		--header-hover: rgba(179, 106, 74, 0.08);
		--header-shadow: rgba(30, 24, 20, 0.08);
		background: var(--header-bg);
		backdrop-filter: blur(10px) saturate(120%);
		-webkit-backdrop-filter: blur(10px) saturate(120%);
		border-bottom: 1px solid var(--header-border);
		transition: background 0.3s ease, border-color 0.3s ease;
		color: var(--header-text);
		isolation: isolate;
	}

	:global([data-theme="dark"]) header {
		--header-bg: linear-gradient(
			180deg,
			rgba(32, 28, 26, 0.92),
			rgba(26, 23, 21, 0.88)
		);
		--header-border: rgba(120, 100, 90, 0.35);
		--header-text: rgba(232, 220, 210, 0.9);
		--header-text-strong: rgba(246, 238, 230, 1);
		--header-accent: #d6a07f;
		--header-hover: rgba(214, 160, 127, 0.12);
		--header-shadow: rgba(0, 0, 0, 0.35);
		background: var(--header-bg);
		border-bottom-color: var(--header-border);
	}

	header.scrolled {
		background: linear-gradient(
			180deg,
			rgba(251, 248, 244, 0.98),
			rgba(245, 240, 234, 0.94)
		);
		border-bottom-color: rgba(200, 180, 165, 0.8);
	}

	:global([data-theme="dark"]) header.scrolled {
		background: linear-gradient(
			180deg,
			rgba(36, 31, 28, 0.98),
			rgba(28, 24, 22, 0.94)
		);
		border-bottom-color: rgba(140, 120, 110, 0.6);
	}

	header::before {
		content: "";
		position: absolute;
		inset: 0;
		background-image:
			radial-gradient(
				rgba(255, 255, 255, 0.25) 1px,
				transparent 1px
			),
			radial-gradient(rgba(120, 100, 90, 0.06) 1px, transparent 1px);
		background-size: 3px 3px, 6px 6px;
		opacity: 0.35;
		pointer-events: none;
	}

	nav {
		position: relative;
		z-index: 1;
		display: flex;
		align-items: center;
		gap: 1rem;
		max-width: 1200px;
		margin: 0 auto;
		height: 58px;
	}

	.nav-left {
		flex: 0 0 auto;
	}

	h2 {
		margin: 0;
		font-size: 1.05em;
		font-weight: 600;
		letter-spacing: 0.02em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--header-text-strong);
		transition: opacity 0.2s ease, color 0.2s ease;
	}

	h2 a:hover {
		opacity: 0.85;
	}

	.internal-links {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.4rem;
		flex: 1;
	}

	/* Dropdown Styles */
	.dropdown {
		position: relative;
	}

	.dropdown-trigger {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.4rem 0.75rem;
		color: var(--header-text);
		background: transparent;
		border: none;
		font-size: 0.9rem;
		font-weight: 500;
		font-family: inherit;
		border-radius: 999px;
		cursor: pointer;
		transition: background 0.2s ease, color 0.2s ease;
	}

	.dropdown-trigger:hover {
		background: var(--header-hover);
	}

	.dropdown.open .dropdown-trigger {
		background: var(--header-hover);
	}

	.dropdown-trigger:focus-visible {
		outline: 2px solid var(--header-accent);
		outline-offset: 2px;
	}

	.dropdown-arrow {
		transition: transform 0.2s ease;
	}

	.dropdown.open .dropdown-arrow {
		transform: rotate(180deg);
	}

	.dropdown-menu {
		position: absolute;
		top: calc(100% + 8px);
		left: 50%;
		transform: translateX(-50%) scale(0.95);
		min-width: 180px;
		background: rgba(252, 248, 243, 0.98);
		backdrop-filter: blur(12px) saturate(120%);
		-webkit-backdrop-filter: blur(12px) saturate(120%);
		border: 1px solid var(--header-border);
		border-radius: 14px;
		box-shadow: 0 10px 24px var(--header-shadow);
		padding: 6px;
		opacity: 0;
		visibility: hidden;
		transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
		z-index: 100;
	}

	:global([data-theme="dark"]) .dropdown-menu {
		background: rgba(35, 30, 27, 0.98);
		border: 1px solid rgba(120, 100, 90, 0.4);
		box-shadow: 0 10px 24px rgba(0, 0, 0, 0.5);
	}

	.dropdown.open .dropdown-menu {
		opacity: 1;
		visibility: visible;
		transform: translateX(-50%) scale(1);
	}

	.dropdown-item {
		display: flex;
		align-items: center;
		gap: 0.6em;
		padding: 0.6em 0.8em;
		color: var(--header-text);
		text-decoration: none;
		font-size: 0.85em;
		font-weight: 500;
		border-radius: 8px;
		transition: background 0.15s ease;
	}

	.dropdown-item:hover {
		background: var(--header-hover);
	}

	.item-icon {
		font-size: 1em;
	}

	.external-icon {
		margin-left: auto;
		font-size: 0.75em;
		color: var(--header-text);
		opacity: 0.6;
	}

	.dropdown-divider {
		height: 1px;
		background: rgba(190, 170, 155, 0.35);
		margin: 4px 8px;
	}

	.social-links {
		display: flex;
		align-items: center;
		gap: 0.3rem;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 30px;
		height: 30px;
		border-radius: 10px;
		color: var(--header-text);
		transition: background 0.2s ease, color 0.2s ease;
	}

	.social-links a:hover {
		background: var(--header-hover);
		color: var(--header-text-strong);
	}

	.social-links svg {
		width: 16px;
		height: 16px;
	}

	/* Right side container */
	.nav-right {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-left: auto;
	}

	/* Hamburger Menu Button - Hidden on Desktop */
	.hamburger {
		display: none;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 4px;
		width: 36px;
		height: 36px;
		padding: 0;
		background: transparent;
		border: none;
		cursor: pointer;
		z-index: 1001;
		border-radius: 10px;
		transition: background 0.2s ease;
	}

	.hamburger:hover {
		background: var(--header-hover);
	}

	.hamburger-line {
		width: 20px;
		height: 2px;
		background: var(--header-text-strong);
		border-radius: 2px;
		transition: all 0.3s ease;
	}

	/* Hamburger animation when menu is open */
	.hamburger.open .hamburger-line:nth-child(1) {
		transform: rotate(45deg) translate(4px, 4px);
	}

	.hamburger.open .hamburger-line:nth-child(2) {
		opacity: 0;
	}

	.hamburger.open .hamburger-line:nth-child(3) {
		transform: rotate(-45deg) translate(4px, -4px);
	}

	@media (max-width: 720px) {
		header {
			padding: 0 1em;
		}

		.hamburger {
			display: flex;
		}

		/* Mobile Menu - Slide Down */
		.internal-links {
			position: fixed;
			top: 58px;
			left: 0;
			right: 0;
			flex-direction: column;
			align-items: stretch;
			gap: 0.5em;
			padding: 0.9em 1em 1.1em;
			background: rgba(252, 248, 243, 0.98);
			backdrop-filter: blur(12px) saturate(120%);
			-webkit-backdrop-filter: blur(12px) saturate(120%);
			border-bottom: 1px solid var(--header-border);
			box-shadow: 0 12px 30px var(--header-shadow);
			border-radius: 0 0 16px 16px;
			transform: translateY(-100%);
			opacity: 0;
			visibility: hidden;
			transition: all 0.32s cubic-bezier(0.4, 0, 0.2, 1);
		}

		:global([data-theme="dark"]) .internal-links {
			background: rgba(35, 30, 27, 0.98);
			border-bottom: 1px solid rgba(120, 100, 90, 0.4);
		}

		.internal-links.open {
			transform: translateY(0);
			opacity: 1;
			visibility: visible;
		}

		h2 {
			font-size: 1em;
		}

		/* Dropdown adjustments for mobile */
		.dropdown {
			width: 100%;
		}

		.dropdown-trigger {
			width: 100%;
			justify-content: space-between;
			padding: 0.75em 1em;
		}

		.dropdown-menu {
			position: static;
			transform: none;
			width: 100%;
			margin-top: 0.5em;
			opacity: 0;
			max-height: 0;
			overflow: hidden;
			visibility: hidden;
			box-shadow: none;
			border: 1px solid rgba(210, 191, 175, 0.35);
			background: rgba(255, 248, 242, 0.7);
		}

		:global([data-theme="dark"]) .dropdown-menu {
			background: rgba(40, 34, 30, 0.85);
			border: 1px solid rgba(120, 100, 90, 0.4);
		}

		.dropdown.open .dropdown-menu {
			opacity: 1;
			max-height: 500px;
			visibility: visible;
		}

		.social-links {
			display: none;
		}
	}

	/* Add padding to body to account for fixed header */
	:global(body) {
		padding-top: 58px;
	}

	@media (prefers-reduced-motion: reduce) {
		header,
		.dropdown-menu,
		.internal-links,
		.hamburger-line,
		.dropdown-arrow {
			transition: none;
		}
	}
</style>

<script>
	// Add scroll effect
	const header = document.querySelector("header");

	function handleScroll() {
		if (window.scrollY > 10) {
			header?.classList.add("scrolled");
		} else {
			header?.classList.remove("scrolled");
		}
	}

	window.addEventListener("scroll", handleScroll, { passive: true });
	handleScroll();

	// Hamburger menu toggle
	const hamburgerBtn = document.getElementById("hamburgerBtn");
	const mobileMenu = document.getElementById("mobileMenu");

	hamburgerBtn?.addEventListener("click", (e) => {
		e.stopPropagation();
		hamburgerBtn.classList.toggle("open");
		mobileMenu?.classList.toggle("open");
	});

	// Close mobile menu when clicking a link
	mobileMenu?.querySelectorAll("a").forEach((link) => {
		link.addEventListener("click", () => {
			hamburgerBtn?.classList.remove("open");
			mobileMenu?.classList.remove("open");
		});
	});

	// Tools dropdown
	const dropdown = document.getElementById("toolsDropdown");
	const toolsBtn = document.getElementById("toolsBtn");

	toolsBtn?.addEventListener("click", (e) => {
		e.stopPropagation();
		dropdown?.classList.toggle("open");
	});

	// Close dropdown when clicking outside
	document.addEventListener("click", (e) => {
		if (!dropdown?.contains(e.target as Node)) {
			dropdown?.classList.remove("open");
		}
		// Close mobile menu when clicking outside
		if (
			!mobileMenu?.contains(e.target as Node) &&
			!hamburgerBtn?.contains(e.target as Node)
		) {
			hamburgerBtn?.classList.remove("open");
			mobileMenu?.classList.remove("open");
		}
	});

	// Close dropdown and mobile menu on escape key
	document.addEventListener("keydown", (e) => {
		if (e.key === "Escape") {
			dropdown?.classList.remove("open");
			hamburgerBtn?.classList.remove("open");
			mobileMenu?.classList.remove("open");
		}
	});
</script>
