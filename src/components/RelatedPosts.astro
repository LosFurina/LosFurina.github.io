---
import type { CollectionEntry } from "astro:content";

interface Props {
    currentPost: CollectionEntry<"blog">;
    allPosts: CollectionEntry<"blog">[];
    maxPosts?: number;
}

const { currentPost, allPosts, maxPosts = 3 } = Astro.props;

// Get current post's tag (folder)
const currentTag = currentPost.id.includes("/")
    ? currentPost.id.split("/")[0]
    : null;

// Find related posts (same tag, not current post)
let relatedPosts = allPosts
    .filter((post) => {
        if (post.id === currentPost.id) return false;

        if (currentTag) {
            const postTag = post.id.includes("/")
                ? post.id.split("/")[0]
                : null;
            return postTag === currentTag;
        }
        return false;
    })
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, maxPosts);

// If not enough related posts, fill with recent posts
if (relatedPosts.length < maxPosts) {
    const neededCount = maxPosts - relatedPosts.length;
    const recentPosts = allPosts
        .filter(
            (post) =>
                post.id !== currentPost.id &&
                !relatedPosts.find((rp) => rp.id === post.id),
        )
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
        .slice(0, neededCount);

    relatedPosts = [...relatedPosts, ...recentPosts];
}
---

{
    relatedPosts.length > 0 && (
        <section class="related-posts">
            <h3 class="related-title">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    width="20"
                    height="20"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25"
                    />
                </svg>
                Related Posts
            </h3>
            <div class="related-grid">
                {relatedPosts.map((post) => (
                    <a href={`/blog/${post.id}/`} class="related-card">
                        <h4 class="related-card-title">{post.data.title}</h4>
                        <p class="related-card-desc">{post.data.description}</p>
                    </a>
                ))}
            </div>
        </section>
    )
}

<style>
    .related-posts {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(var(--gray-light), 0.8);
    }

    .related-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.25rem;
        margin: 0 0 1.5rem;
        color: rgb(var(--gray-dark));
    }

    .related-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1rem;
    }

    .related-card {
        padding: 1.25rem;
        background: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(var(--gray-light), 0.8);
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    :global([data-theme="dark"]) .related-card {
        background: rgba(40, 40, 45, 0.6);
        border-color: rgba(255, 255, 255, 0.1);
    }

    .related-card:hover {
        transform: translateY(-4px);
        border-color: var(--accent);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .related-card-title {
        font-size: 1rem;
        font-weight: 600;
        margin: 0 0 0.5rem;
        color: rgb(var(--gray-dark));
        line-height: 1.4;
    }

    .related-card-desc {
        font-size: 0.85rem;
        color: rgb(var(--gray));
        margin: 0;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    @media (max-width: 600px) {
        .related-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
