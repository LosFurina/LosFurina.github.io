<style>
	footer {
		padding: 2rem 1rem 4rem;
		background: rgba(var(--gray-light), 0.3);
		color: rgb(var(--gray));
		text-align: center;
	}

	:global([data-theme="dark"]) footer {
		background: rgba(0, 0, 0, 0.2);
	}

	.footer-content {
		max-width: 600px;
		margin: 0 auto;
	}

	.copyright {
		margin: 0 0 1rem;
		font-size: 0.9rem;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.25rem;
		margin-bottom: 1rem;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		text-decoration: none;
		color: rgb(var(--gray));
		background: rgba(var(--gray-light), 0.5);
		border-radius: 10px;
		transition: all 0.2s ease;
	}

	:global([data-theme="dark"]) .social-links a {
		background: rgba(255, 255, 255, 0.1);
	}

	.social-links a:hover {
		color: var(--accent);
		background: rgba(var(--gray-light), 0.8);
		transform: translateY(-2px);
	}

	:global([data-theme="dark"]) .social-links a:hover {
		background: rgba(255, 255, 255, 0.15);
	}

	.footer-note {
		margin: 0;
		font-size: 0.8rem;
	}

	.footer-note a {
		color: var(--accent);
		text-decoration: none;
	}

	.footer-note a:hover {
		text-decoration: underline;
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}
</style>
