---
import { SOCIALS } from "../consts";
---

<aside class="personal-profile">
    <div class="profile-header">
        <div class="avatar-container">
            <img
                src="https://github.com/LosFurina.png?size=160"
                alt="GitHub avatar"
                class="avatar"
            />
        </div>
        <div class="profile-info">
            <h2 class="name">Wayne</h2>
            <p class="signature">Coding with passion & coffee ☕️</p>
        </div>
    </div>

    <div class="motto-container">
        <p class="motto">
            "The best way to predict the future is to create it."
        </p>
    </div>

    <div class="social-links">
        <a
            href="https://github.com/LosFurina"
            target="_blank"
            aria-label="GitHub"
            class="social-btn"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                    d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36 1-4.42 1Z"
                ></path><path
                    d="M9 22v-4a4.8 4.8 0 0 0-1-3.5c-3 0-6-2-6-5.5.08-1.25.27-2.48 1-3.5C2.72 6.5 2.72 5.3 3 4.15c0 0 1 0 3 1.5 2.64-.5 5.36 1 4.42 1Z"
                ></path></svg
            >
        </a>
        <a
            href={SOCIALS.xUrl}
            target="_blank"
            rel="noopener"
            aria-label="X (Twitter)"
            class="social-btn"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                    d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
                ></path></svg
            >
        </a>
        <a
            href={`mailto:${SOCIALS.email}`}
            aria-label="Email"
            class="social-btn"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
                    d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
            >
        </a>
    </div>
</aside>

<style>
    .personal-profile {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 16px;
        border: 1px solid var(--border-soft);
        padding: 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
        align-items: center;
        text-align: center;
    }

    :global([data-theme="dark"]) .personal-profile {
        background: rgba(35, 30, 27, 0.7);
    }

    .profile-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        width: 100%;
    }

    .avatar-container {
        position: relative;
        width: 80px;
        height: 80px;
        border-radius: 50%;
        padding: 2px;
        border: 1px solid var(--border-soft);
    }

    .avatar {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid rgba(255, 255, 255, 0.8);
        background-color: transparent;
    }

    .name {
        margin: 0;
        font-size: 1.4rem;
        font-weight: 700;
        color: rgb(var(--gray-dark));
        letter-spacing: -0.02em;
    }

    .signature {
        margin: 0.25rem 0 0;
        font-size: 0.875rem;
        color: rgb(var(--ink-muted));
        font-weight: 400;
    }

    .motto-container {
        width: 100%;
        position: relative;
        padding: 0.85rem;
        background: rgba(255, 255, 255, 0.5);
        border-radius: 12px;
        border: 1px dashed var(--border-soft);
    }

    :global([data-theme="dark"]) .motto-container {
        background: rgba(255, 255, 255, 0.04);
    }

    .motto {
        margin: 0;
        font-size: 0.85rem;
        line-height: 1.6;
        color: rgb(var(--ink-muted));
        font-style: normal;
        font-family: var(--font-sans);
    }

    .social-links {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
    }

    .social-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: transparent;
        color: rgb(var(--ink-muted));
        border: 1px solid var(--border-soft);
        transition: color 0.2s ease, border-color 0.2s ease,
            background 0.2s ease;
    }

    .social-btn:hover {
        background: rgba(var(--accent-rgb), 0.08);
        color: var(--accent-dark);
        border-color: rgba(var(--accent-rgb), 0.35);
    }
</style>
